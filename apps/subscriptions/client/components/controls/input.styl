.input
  display flex
  align-items center
  padding 5px 8px 4px
  margin-right 5px
  background-color #fff
  border 1px solid #d5d5d5
  border-radius 3px
  white-space nowrap
  cursor pointer
  transition .2s

  i
    margin-right 5px
    font-size 1.2em
    color #aaa

  &:hover
    border 1px solid lightblue
    box-shadow 0 0 2px 1px blue

    i
      color #777
      transition .2s

  .invisible
    padding 0
    margin 0
    background none
    border none
    box-shadow none
    cursor pointer
    
    &:hover, &:focus, &:active
      background none
      border none
      box-shadow none
      outline none