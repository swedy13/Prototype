// ---- HEADER STYLES ---- //
// Site Header
header
  .background
    height 30px
    background-color #1c1c1c
    border-bottom 1px solid #000
    box-shadow 0 2px 4px #111

  .logo
    margin 4px 0 0 3px
    border-radius 75%
    filter drop-shadow(0 2px 4px #111)
    cursor pointer

    &:hover
      height 40px
      width 42px
      margin 2px 0 0 1px
      border 2px solid gold
      filter drop-shadow(0 0 5px yellow)

    &:active
      height 38px
      width 40px
      margin 3px 0 0 2px
      border 2px solid gold
      filter drop-shadow(0 0 5px yellow)

      
// Section Header
section
  &.header
    height 25px
    display flex
    align-items center

    .main
      &.icon
        padding-top 4px
        margin-right 5px
        
        i
          font-size 1.7em
          color #999
          
    .title
      position absolute
      margin-top 5px
    
      h2
        font-size 1.4em
        font-weight 500
        color #999
  
    .controls
      display none