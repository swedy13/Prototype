.spacer
  &.vertical
    margin 5px 0px
    
  &.horizontal
    margin 0px 5px

  &.left
    margin-left 5px

  &.right
    margin-right 5px

span
  &.inline
    display flex
    flex-direction row
    align-items center

    :first-child
      margin-right 5px

  &.baseline
    display flex
    flex-direction row
    align-items baseline

    :first-child
      margin-right 5px

  &.top
    align-items flex-start