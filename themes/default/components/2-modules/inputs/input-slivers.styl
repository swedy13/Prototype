@import 'themes/default/colors.import.styl'

// ---- INPUT SLIVERS ---- //
input, textarea, .input-group

  // ---- SLIVER BACKGROUNDS ---- //
  // Ghost Sliver Background
  &.ghost
    &.sliver, &.red-sliver, &.yellow-sliver, &.green-sliver, &.blue-sliver
      &:hover, &.active
        span
          background-color transparent
    
  // Light Gray Sliver Background
  &.light-gray
    &.sliver, &.red-sliver, &.yellow-sliver, &.green-sliver, &.blue-sliver
      &:hover, &.active
        span
          background-color lightest-gray
    
  // ---- SLIVER HIGHLIGHTS ---- //
  // Default Sliver
  &.sliver
    &:hover, &.active
      input, span
        box-shadow inset 0 2px 0 dark-gray
        
      &.raised
        input, span
          box-shadow inset 0 2px 0 dark-gray
  
  &.red-sliver
    &:hover, &.active
      input, span
        box-shadow inset 0 2px 0 red
        
      &.raised
        input, span
          box-shadow inset 0 2px 0 red
  
  &.yellow-sliver
    &:hover, &.active
      input, span
        box-shadow inset 0 2px 0 yellow
        
      &.raised
        input, span
          box-shadow inset 0 2px 0 yellow
  
  &.green-sliver
    &:hover, &.active
      input, span
        box-shadow inset 0 2px 0 green
        
      &.raised
        input, span
          box-shadow inset 0 2px 0 green
  
  &.blue-sliver
    &:hover, &.active
      input, span
        box-shadow inset 0 2px 0 blue
        
      &.raised
        input, span
          box-shadow inset 0 2px 0 blue
  