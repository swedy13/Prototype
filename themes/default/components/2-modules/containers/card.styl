@import 'themes/default/colors.import.styl'

// ---- CARD STYLES ---- //
.card

  // Card Header
  .header
    display flex
    align-items center
    justify-content space-between
    margin-bottom 10px
    
    .bio
      display flex
      align-items center
        
      .details
        display flex
        flex-direction column
        justify-content left
        
        .name
          font-size 1.2em
          color red
          white-space nowrap
          
        .timestamp
          font-size .9em
          color #999
          white-space nowrap

  // Card Content
  .content
    margin 0
    margin-bottom 10px

    .text
      margin-bottom 10px
      font-size 1em
      color #333

    .images
      width 100%
      display flex
      flex-wrap wrap
      justify-content space-between
      margin-bottom 10px
      cursor pointer
      
      .image
        height 300px
        max-height 500px
        min-height 150px
        max-width 100%
        margin 2.5px 0
        background-image url("http://www.unoosa.org/res/timeline/index_html/space-2.jpg")
        background-size cover
        background-position top center
        background-repeat no-repeat
        border 1px solid lightgray

  // Card Footer
  .footer
    display flex
    flex-direction column

    .subs-interaction
      border-top 1px solid disabled-bg-light

    .subs-comment
      padding 8px
      margin 0px -8px
      background-color lightest-gray

      input
        width 100%