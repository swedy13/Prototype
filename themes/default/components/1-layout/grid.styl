header
  position relative
  height 30px
  width 100%
  margin-bottom 15px
  background-color #1c1c1c
  border-bottom 1px solid #000
  box-shadow 0 2px 4px #111

nav
  display flex
  position absolute
  flex-direction column
  align-items center
  width 50px
  top 30px
  right 0
  bottom 0
  padding 5px 0
  background #999
  border-left 1px solid #888
  box-shadow -2px 0 4px #777

main
  display flex
  justify-content center
  width calc(100% - 50px)

  .left-rail
    width 180px
    margin-right 10px
  
  .content
    min-width 480px
    margin 0 10px
  
  .right-rail
    width 180px
    margin-left 10px

footer
  height 30px
  width calc(100% - 70px)
  display flex
  align-items center
  position fixed
  bottom 0
  left 0
  right 0
  padding 0 8px
  background-color #e5e5e5
  border-top 1px solid #ddd